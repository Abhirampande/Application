@*Ui for Category List Page*@
@model List<Category>
@* Ui design for Ctegory Page*@
@*use below partal name code for every crud operation(html) to avoid writing notification code*@
<partial name="_partial" /> @*lnked to partialcs.html to show notification*@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category<span style="padding-left: 10px"></span> <i class="bi bi-search"></i>
            </a>

        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        @* Create Post Ui Category*@
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        @* Update Category ui*@
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            @*Create Ui to post Category*@
            <tr>
                <td>@obj.Name</td>
            <td>
                @obj.DisplayOrder
            </td>
            @* Update Ui for Category(Edit Button & Delete Button)*@
            <td>
                <div class="w-75 btn-group" role="group">
                     <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit                           
                     </a>

                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                      </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
        
</table>
</div>